@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .btn {
        width: 75px;
    }
</style>

<h1>Users</h1>

<div class="card-deck">
    @foreach (var user in Model.Users)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@user.FirstName  @user.LastName</h3>
                <h4>Phone: @user.Phone</h4>
            </div>
            
            <img class="card-img-top imageThumbnail" src="data:image/png;base64,@(Html.Raw(Convert.ToBase64String(user.Photo)))"
                 asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-page="User/View" asp-route-id="@user.Id" class="btn btn-primary m-1">View</a>
                <a asp-page="User/Edit" asp-route-id="@user.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-page-handler="Delete" asp-route-id="@user.Id" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>

<div class="align-middle">
    <a asp-page="User/Create" style="min-width: 20rem; max-width:30.5%;" class="btn btn-success">Create New CV</a>
</div>