@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td class="align-middle">@user.FirstName</td>
                <td class="align-middle">@user.LastName</td>
                <td class="align-middle">@user.Phone</td>
                <td class="align-middle"><a asp-page="forms/View" asp-route-id="@user.Id" class="btn btn-primary">View</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<a asp-page="forms/Create" class="btn btn-success">Create New CV</a>