@page
@model CVForm.Pages.forms.Create
@{
    ViewData["Title"] = "Create CV";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form method="post" class="form-horizontal"  enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="_CreateUserPartial" model="Model.Input" />
    
    <div class="form-horizontal">
        @{ for (int i = 0; i < Model.SkillList.Count; i++)
           {
               <input asp-for="@Model.SkillList[i].Value" type="hidden" />
               <input asp-for="@Model.SkillList[i].Text" type="hidden" />
               {
                   <input asp-for="@Model.SkillList[i].Selected" /> @Model.SkillList[i].Text
               }
               <br />
           }
        }
    </div>
    
    @* <div class="container"> *@
    @*     Nationality: *@
    @*     <select id="lstNationality" name="lstNationality" asp-items="@Model.NationalityList" multiple class="form-control"></select> *@
    @* *@
    @* </div> *@
    
    <div class="form-horizontal">
        
        <div class="form-group">
            <label>Multi item list box</label>
            <select class="form-control" asp-for="NationalityE_List" asp-items="Model.NationalityList" style="height:120px"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
